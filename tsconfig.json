{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2016", "es2017"],
    "types": [
      "chance",
      "chrome",
      "chromecast-caf-sender",
      "classnames",
      "hls.js",
      "jest",
      "node"
    ]
  },
  "include": ["./src/**/*.ts"]
}
