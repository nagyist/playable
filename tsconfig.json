{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "ES5",
    "jsx": "react",
    "lib": [
      "dom",
      "es2016",
      "es2017"
    ],
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["./src/stories/**/*.ts"]
}
